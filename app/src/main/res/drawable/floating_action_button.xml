<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="32dp" />

            <solid android:color="@color/colorPrimary" />

            <padding
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp" />

            <stroke
                android:width="4dp"
                android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

</selector>
