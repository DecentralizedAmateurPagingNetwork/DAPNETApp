<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navhead"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="62dp"
        android:layout_height="65dp"
        android:layout_above="@+id/navheaddapnet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="16dp"
        app:srcCompat="@mipmap/ic_dapnetlogosmall" />

    <TextView
        android:id="@+id/navheaddapnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navheadversions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/dapnet"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/www_hampager_de"
        android:textColorLink="@android:color/background_light" />

    <TextView
        android:id="@+id/navheadversions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="App v1.0.3, Core v1.1.3.3, API v1.1.3" />

</RelativeLayout>
