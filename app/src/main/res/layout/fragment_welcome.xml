<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="@string/hello_welcome_fragment"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/loggedinmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:text="@string/in_order_to_use_this_service_please_login"
            android:visibility="gone" />

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_centerHorizontal="true"
            android:text="This is the official DAPNET app created by"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/linkView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewAnd"
            android:layout_alignBottom="@+id/textViewAnd"
            android:layout_toLeftOf="@+id/textViewAnd"
            android:layout_toStartOf="@+id/textViewAnd"
            android:text="@string/github_dh3wr" />

        <TextView
            android:id="@+id/textViewAnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoTextView"
            android:layout_centerHorizontal="true"
            android:text="@string/and" />

        <TextView
            android:id="@+id/linkView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewAnd"
            android:layout_alignBottom="@+id/textViewAnd"
            android:layout_toEndOf="@+id/textViewAnd"
            android:layout_toRightOf="@+id/textViewAnd"
            android:text="@string/github_ihfschwarz" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/rwth_afu_dapnet_logo_desc"
            android:padding="8dp"
            app:srcCompat="@mipmap/ic_afu_dapnet_logo" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/welcome_statslist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linkView1"
        android:layout_centerHorizontal="true">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout><!--
</FrameLayout>

-->