<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            app:srcCompat="@mipmap/ic_afu_dapnet_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/rwth_afu_dapnet_logo_desc"
            android:padding="8dp" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/hello_welcome_fragment"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/loggedinmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/in_order_to_use_this_service_please_login"
            android:visibility="gone" />

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/linkView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/github_dh3wr"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewAnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/and"
            android:visibility="gone" />

        <TextView
            android:id="@+id/linkView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/welcome_statslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/statsImage"
            app:srcCompat="@mipmap/ic_afu_dapnet_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>
